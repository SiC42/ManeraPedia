{
  "settings": {
    "index": {
      "analysis": {
        "filter": {},
        "analyzer": {
          "analyzer_keyword": {
            "tokenizer": "keyword",
            "filter": "lowercase"
          },
          "edge_ngram_analyzer": {
            "filter": [
              "lowercase"
            ],
            "tokenizer": "edge_ngram_tokenizer"
          }
        },
        "tokenizer": {
          "edge_ngram_tokenizer": {
            "type": "edge_ngram",
            "min_gram": 2,
            "max_gram": 5,
            "token_chars": [
              "letter"
            ]
          }
        }
      }
    }
  },
  "mappings": {
    "properties": { 
      "created": {
        "type": "date"
      },
      "modified": {
        "type": "date"
      },
      "modifier": {
        "type": "text",
        "fields": {
            "raw": { 
              "type":  "keyword"
            }
        }
    },
      "creator": {
        "type": "text",
        "fields": {
            "raw": { 
              "type":  "keyword"
            }
        }
    },
      "title": {
        "type": "text",
        "copy_to": "body",
        "fields": {
            "raw": { 
              "type":  "keyword"
            }
        }
      },
      "text": {
        "type": "text",
        "copy_to": "body"
      },
      "tags": {
        "type": "keyword",
        "copy_to": "body"
      },
      "type": {
        "type": "keyword"
      },
      "access": {
        "properties": {
        	"read": {"type": "keyword"},
        	"write": {"type": "keyword"}
        }
      },
      "body": {
        "type": "text",
        "analyzer": "edge_ngram_analyzer"
      }
    }
  }
}
